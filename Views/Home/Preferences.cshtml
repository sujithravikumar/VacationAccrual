@{
    ViewData["Title"] = "Preferences";
}
<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label>Start date</label>
            <select class="form-control" aria-describedby="startDateHelpBlock"></select>
            <small id="startDateHelpBlock" class="form-text text-muted">
                Start date of the current pay period.
            </small>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Accrual</label>
            <input class="form-control" aria-describedby="accrualHelpBlock" />
            <small id="accrualHelpBlock" class="form-text text-muted">
                Accrual hours per pay period.
            </small>
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label>Max balance</label>
            <input class="form-control" aria-describedby="maxBalanceHelpBlock" />
            <small id="maxBalanceHelpBlock" class="form-text text-muted">
                Maximum balance hours limit.
            </small>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Balance</label>
            <input class="form-control" aria-describedby="balanceHelpBlock" />
            <small id="balanceHelpBlock" class="form-text text-muted">
                Balance hours of previous pay period.
            </small>
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label>Period</label>
            <select class="form-control" aria-describedby="periodHelpBlock"></select>
            <small id="periodHelpBlock" class="form-text text-muted">
                Number of future pay periods to be forecasted.
            </small>
            <span class="text-danger"></span>
        </div>
    </div>
</div>

