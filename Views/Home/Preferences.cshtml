@{
    ViewData["Title"] = "Preferences";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <h4>Email reminders.</h4>
            <hr />
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Receive email reminders to take vacation for a given pay period
                </label>
            </div>
            <div class="form-check" style="padding-left:5em">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
                <label class="form-check-label" for="defaultCheck2">
                    On beginning day of the first week
                </label>
            </div>
            <div class="form-check" style="padding-left:5em">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck3">
                <label class="form-check-label" for="defaultCheck3">
                    On beginning day of the second week
                </label>
            </div>
            <div class="form-check" style="padding-left:5em">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck3">
                <label class="form-check-label" for="defaultCheck3">
                    On two days before the last day
                </label>
            </div>
            <div style="padding-top:1em">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>